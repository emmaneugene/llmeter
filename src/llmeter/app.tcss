/* llmeter — main stylesheet */

Screen {
    background: $background;
}


/* ── Scrollable body ─────────────────────────────────────── */

#main-body {
    height: 1fr;
    padding: 1 0;
}

#provider-list {
    height: auto;
    width: 1fr;
    padding: 0 1;
}

/* ── Loading / empty state ──────────────────────────────── */

#empty-state {
    width: 1fr;
    height: 5;
    content-align: center middle;
    text-align: center;
    color: $text-muted;
}


